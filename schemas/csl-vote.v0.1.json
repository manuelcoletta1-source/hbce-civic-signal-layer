{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CSL Vote Object v0.1",
  "type": "object",
  "required": [
    "proposal_id",
    "territory_level",
    "vote_choice",
    "voter_public_key",
    "timestamp",
    "signature"
  ],
  "properties": {
    "proposal_id": {
      "type": "string",
      "description": "Unique identifier of the proposal being voted on"
    },
    "territory_level": {
      "type": "string",
      "enum": [
        "NEIGHBORHOOD",
        "CITY",
        "REGION",
        "STATE",
        "EU"
      ],
      "description": "Territorial scope of the vote"
    },
    "vote_choice": {
      "type": "string",
      "enum": [
        "YES",
        "NO",
        "ABSTAIN"
      ],
      "description": "Vote selection"
    },
    "voter_public_key": {
      "type": "string",
      "description": "Public key derived from IPR-linked cryptographic identity"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of vote submission"
    },
    "signature": {
      "type": "string",
      "description": "Digital signature of the vote object"
    }
  },
  "additionalProperties": false
}
